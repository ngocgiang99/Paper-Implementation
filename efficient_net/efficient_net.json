{
    "name": "EfficientNetB0",
    "n_gpu": 1,

    "arch": {
        "type": "EfficientNetModel",
        "args": {}
    },
    "data_loader": {
        "type": "Cifar10DataLoader",
        "args":{
            "data_dir": "../data",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 10000,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 5e-4,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 1000,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "max val_accuracy",
        "early_stop": 10,

        "tensorboard": true
    }
}
